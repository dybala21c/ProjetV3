{% extends 'base_admin.html.twig' %}

{% block title %}Specialite index{% endblock %}

{% block body %}
    <h1>Liste des specialit√©s</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
               
            </tr>
        </thead>
        <tbody>
        {% for specialite in specialites %}
            <tr>
                <td>{{ specialite.id }}</td>
                <td>{{ specialite.Libelle }}</td>
                <td>
                    <a href="{{ path('specialite_show', {'id': specialite.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                   </td>
                    <td><a href="{{ path('specialite_edit', {'id': specialite.id}) }}"><i class="fa fa-pencil-square" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('specialite_new') }}">Create new</a>
{% endblock %}
