{% extends 'base_admin.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Liste des Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
             
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.Libelle }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    </td>
                  <td>  <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="fa fa-pencil-square" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_new') }}">Ajouter</a>
{% endblock %}
